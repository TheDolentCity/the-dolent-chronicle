---
import BlueskyLogo from "@/components/social/BlueskyLogo.astro";
import { ThemeSelect } from "@/components/themes/ThemeSelect";

const today = new Date();
---

<footer class="border-t border-zinc-400 dark:border-zinc-800 bg-zinc-200 dark:bg-black">
	<div class="max-w-[70rem] mx-auto py-8 px-8">
		<div class="flex gap-2 lg:gap-4 items-center justify-between">
			<nav class="flex gap-2 lg:gap-4 items-center">
				<a data-astro-prefetch href="/" title="Go home" class="text-base leading-none hover:text-zinc-900 dark:hover:text-zinc-100 mst">Home</a>
				<a data-astro-prefetch href="/about" title="About this site" class="text-base leading-none hover:text-zinc-900 dark:hover:text-zinc-100 mst">About</a>
				<a data-astro-prefetch href="/rss.xml" title="RSS file" class="text-base leading-none hover:text-zinc-900 dark:hover:text-zinc-100 mst">RSS</a>
				<a
					href="https://bsky.app/profile/thedolentcity.bsky.social"
					title="Go to my Bluesky account"
					class="text-base leading-none hover:text-zinc-900 dark:hover:text-zinc-100 mst"
				>
					<BlueskyLogo width="18" height="18" />
				</a>
			</nav>
			<div class="flex gap-2 lg:gap-4 items-center">
				<ThemeSelect client:load />
			</div>
		</div>
		<div class="pt-2 text-sm">&copy; {today.getFullYear()} The Dolent Chronicle. All rights reserved.</div>
	</div>
</footer>
